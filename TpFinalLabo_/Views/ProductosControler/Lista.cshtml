@model IEnumerable<TpFinalLabo_.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1>Lista de Producto</h1>

<p>
    <a asp-action="Crear">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Categoria!.Nombre)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(@item.Foto))
                    {
                        <img src="~/imagenes/foto/@item.Foto" width="60"
                             class="rounded-circle" asp-append-version="true" />
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                    <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a> |
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
