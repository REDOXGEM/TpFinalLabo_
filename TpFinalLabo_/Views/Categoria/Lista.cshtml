@model IEnumerable<TpFinalLabo_.Models.Categoria>


@{
    ViewData["Title"] = "Categorias";
}

<h1>Listado de Categorias</h1>

<p>
    <a asp-action="Crear">Crear Nueva Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                    <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a> |
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
